<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Beschleunigungssensor.MainPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="HorizontalOptions"
                        Value="Center"/>
                <Setter Property="VerticalOptions"
                        Value="Center" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <!--Label für instrucktionen-->
            <Label Text="Drehen sie ihr Handy!"
                   FontAttributes="Bold"
                   FontSize="Large" />

            <!--Label angzeige der Sensor Daten-->
            <Label x:Name="LabelSensorData" />

            <!--Label anzeige ob Handy vertikal oder Horizontal gehoben--> 
            <Label x:Name="LabelPositionInfo"
                   Margin="0,50,0,0"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
